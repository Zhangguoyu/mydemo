<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="navigationBarStyle">@style/CNavigationBarStyle</item>
        <item name="tabBarStyle">@style/CTabBarStyle</item>
    </style>

    <style name="CMenuBarPanelAnimation">
        <item name="android:windowEnterAnimation">@anim/internal_menu_panel_show</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CNavigationBarStyle">
        <item name="menubarHeight">54dp</item>
    </style>

    <style name="CTabBarStyle">
        <item name="menubarHeight">20dp</item>
    </style>
    
    <style name="TestButtonBarViewStyle">
        <item name="itemTextSize">15sp</item>
    </style>

</resources>